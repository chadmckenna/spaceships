!!! Strict
%html{html_attrs}

  %head
    %title
      = h(yield(:title) || "Untitled")
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag 'application'
    = google_webfont_stylesheet('Cabin+Sketch:bold')
    = google_webfont_stylesheet('Droid+Sans+Mono')
    = yield(:head)

  %body
    #container
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"

      - if show_title?
        .title
          %h1=link_to yield(:title), spaceships_path

      = yield
